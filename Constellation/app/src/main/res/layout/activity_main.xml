<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main"
    >
    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的生日"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="16sp"

            />
        <Button
            android:id="@+id/btn_birth"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sign_button"
            android:gravity="center"
            android:text="选择生日"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/consHead"
        android:layout_below="@id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日运势"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/consSummary"
        android:layout_below="@id/consHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:maxLines="5"
        />

    <TableLayout
        android:layout_below="@id/consSummary"
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >
        <TableRow>
            <LinearLayout
                android:id="@+id/zonghe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合指数"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="综合指数"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康指数"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/jiankangtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <LinearLayout
                android:id="@+id/aiqing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爱情指数"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/tv_love"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:text="爱情指数"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="幸运颜色"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/xingyuncolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <LinearLayout
                android:id="@+id/gongzuo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作指数"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/tv_work"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="工作指数"
                    android:layout_marginRight="15dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="幸运数字"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/xingyunnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <LinearLayout
                android:id="@+id/caiyun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="财运指数"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="财运指数"
                    android:textColor="#ffffff"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="速配Q友 "
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:id="@+id/Qfriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>


</RelativeLayout>
